<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/SearchItemCardView"
        app:cardCornerRadius="4dp"
        >
        <LinearLayout
            android:orientation="vertical"
            style="@style/MatchWrap"
            >
            <ImageView
                android:id="@+id/book_search_image"
                android:layout_width="100dp"
                android:layout_height="147dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        style="@style/MatchWrap"
        android:focusableInTouchMode="false"
        android:orientation="vertical">
        <TextView
            android:id="@+id/book_search_title"
            style="@style/SearchListBookTitleView"
            />
        <include layout="@layout/rate_describe" />
        <TextView
            android:id="@+id/book_search_author"
            style="@style/SearchListBookAuthorView"
           />
        <TextView
            android:id="@+id/book_search_publisher"
            style="@style/SearchListBookPublisherView"
            />
    </LinearLayout>

</LinearLayout>